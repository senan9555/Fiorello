@model List<Product>

    @foreach (Product product in Model)
{
    <li>
        <a style="display:flex;justify-content:space-between" asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id">
            <img style="width:50px; height:50px" src ="~/img/@product.Image" />
            <span>@product.Name:@product.Price</span>
        </a>
    </li>
}

                     